{
  "name": "@playerberry/playerberry",
  "version": "0.0.1",
  "description": "Latest Etsy API wrapper for NodeJS.",
  "packageManager": "yarn@3.5.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "postinstall": "husky install",
    "test": "turbo run test --parallel",
    "test:affected": "turbo run test --filter='...[origin/stage]' --parallel",
    "format": "turbo run format --parallel",
    "format:affected": "turbo run format --filter='...[origin/stage]' --parallel",
    "lint": "turbo run lint --parallel",
    "lint:affected": "turbo run lint --filter='...[origin/stage]' --parallel",
    "changelog": "turbo run changelog --parallel",
    "changelog:affected": "turbo run changelog --filter='...[origin/stage]' --parallel",
    "update": "yarn upgrade-interactive"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.1",
    "@commitlint/config-angular": "^17.4.4",
    "conventional-changelog-cli": "^2.2.2",
    "husky": "^8.0.3",
    "turbo": "^1.8.8"
  },
  "engines": {
    "node": ">=16.9.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/playerberry/playerberry.git"
  },
  "bugs": {
    "url": "https://github.com/playerberry/playerberry/issues"
  },
  "homepage": "https://playerberry.com",
  "author": "Yankı Küçük <yankikucuk@playerberry.com> (https://playerberry.com)",
  "contributors": [
    "yankikucuk <yankikucuk@playerberry.com>"
  ],
  "license": "Apache-2.0"
}
